# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "oraclelinux/8"
  config.vm.box_url = "https://oracle.github.io/vagrant-projects/boxes/oraclelinux/8.json"
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "2048"
    vb.cpus = 16
  end
  config.vm.provision "shell", inline: <<-SHELL
    dnf update -y || exit 1
    dnf upgrade -y || exit 1
    dnf install -y vim bash-completion tree setroubleshoot puppet jq htop || exit 1
    curl -o /opt/opensearch-1.0.0-linux-x64.tar.gz https://artifacts.opensearch.org/releases/bundle/opensearch/1.0.0/opensearch-1.0.0-linux-x64.tar.gz || exit 1
  SHELL
end
